# =======================================
# CTRLBUY WEBSHOP - ENVIRONMENT VARIABLES
# =======================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env
# =======================================

# =======================================
# DATABASE CONFIGURATION
# =======================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=webshop
DB_USERNAME=root
DB_PASSWORD=your_mysql_password_here

# =======================================
# EMAIL CONFIGURATION
# =======================================
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_FROM=noreply@yourcompany.com

# =======================================
# JWT SECURITY
# =======================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_minimum_32_characters

# =======================================
# APPLICATION SETTINGS
# =======================================
APP_BASE_URL=http://localhost:8080
SERVER_PORT=8080

# =======================================
# DEVELOPMENT SETTINGS (OPTIONAL)
# =======================================
DDL_AUTO=update
SHOW_SQL=false
TEMPLATE_CACHE=true
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO

# =======================================
# PRODUCTION OVERRIDES (WHEN DEPLOYING)
# =======================================
# DDL_AUTO=validate
# SHOW_SQL=false
# TEMPLATE_CACHE=true
# LOG_LEVEL=WARN
# APP_LOG_LEVEL=WARN
